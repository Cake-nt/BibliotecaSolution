@model Biblioteca.Core.Models.Libro

@{
    ViewData["Title"] = "Nuevo Libro";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<hr />
<div class="row">
    <div class="col-md-6">
        <form action="/Libros/Create" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label class="form-label">Título del Libro *</label>
                <input asp-for="Titulo" class="form-control" name="Titulo" required />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Autor *</label>
                <input asp-for="Autor" class="form-control" name="Autor" required />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">ISBN</label>
                <input asp-for="ISBN" class="form-control" name="ISBN" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Género</label>
                <input asp-for="Genero" class="form-control" name="Genero" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Año de Publicación *</label>
                <input asp-for="AnioPublicacion" class="form-control" name="AnioPublicacion" value="@DateTime.Now.Year" required />
                <span asp-validation-for="AnioPublicacion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Editorial</label>
                <input asp-for="Editorial" class="form-control" name="Editorial" />
                <span asp-validation-for="Editorial" class="text-danger"></span>
            </div>

            <!-- AGREGAR CATEGORÍA -->
            <div class="form-group mb-3">
                <label class="form-label">Categoría *</label>
                <select class="form-control" name="CategoriaId" required>
                    <option value="1">Ficción</option>
                    <option value="2">No Ficción</option>
                    <option value="3">Científico</option>
                    <option value="4">Educativo</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Ejemplares Totales *</label>
                <input asp-for="EjemplaresTotales" class="form-control" name="EjemplaresTotales" value="1" min="1" required />
                <span asp-validation-for="EjemplaresTotales" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Ejemplares Disponibles *</label>
                <input asp-for="EjemplaresDisponibles" class="form-control" name="EjemplaresDisponibles" value="1" min="0" required />
                <span asp-validation-for="EjemplaresDisponibles" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear Libro</button>
                <a href="/Libros" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
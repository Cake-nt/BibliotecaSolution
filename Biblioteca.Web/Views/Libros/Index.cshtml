@model IEnumerable<Biblioteca.Core.Models.Libro>

@{
    ViewData["Title"] = "Libros";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a href="/Libros/Create" class="btn btn-primary">Nuevo Libro</a>
</div>

<!-- Formulario de búsqueda -->
<form action="/Libros/Search" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="criterio" class="form-control" placeholder="Buscar por título, autor, género..." />
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>

<table class="table table-striped">
    <thead class="table-primary">
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Género</th>
            <th>Disponibles</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Autor</td>
                <td>@item.Genero</td>
                <td>
                    @if (item.EjemplaresDisponibles > 0)
                    {
                        <span class="badge bg-success">@item.EjemplaresDisponibles / @item.EjemplaresTotales</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">@item.EjemplaresDisponibles / @item.EjemplaresTotales</span>
                    }
                </td>
                <td>
                    <a href="/Libros/Details/@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a href="/Libros/Edit/@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a href="/Libros/Delete/@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@model IEnumerable<Biblioteca.Core.Models.Socio>

@{
    ViewData["Title"] = "Socios";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a href="/Socios/Create" class="btn btn-primary">Nuevo Socio</a>
</div>

<table class="table table-striped">
    <thead class="table-primary">
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.CodigoSocio</strong></td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Email</td>
                <td>
                    @if (item.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>
                    <a href="/Socios/Details/@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a href="/Socios/Edit/@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a href="/Socios/Delete/@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>